generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CarModel {
  carId      Int     @id @default(autoincrement()) @map("car_id")
  carModel   String  @default("")                  @map("car_model")
  executorId String?                               @map("executor_id")

  @@map("cars_models")
}

// ** Модели сервиса "Документы" ** //

model SellerDetails {
  sellerDetailsId Int      @id @default(autoincrement()) @map("seller_details_id")
  name            String   @default("")
  phone           String   @default("")
  carCost         String   @default("")                  @map("car_cost")
  role            Boolean  @default(false)
  comment         String   @default("")
  createdAt       DateTime @default(now())               @map("created_at")
  publishAt       DateTime @updatedAt                    @map("publish_at")

  @@map("sellers_details")
}

model VehicleData {
  vehicleDataId       Int     @id @default(autoincrement()) @map("vehicle_data_id")
  vin                 String  @default("")
  frameNumber         String  @default("")                  @map("frame_number")
  comment             String  @default("")
  haveAServiceBook    Boolean @default(false)               @map("have_a_service_book")
  additionalDocuments String  @default("")
  sts                 String  @default("")
  tcp                 String  @default("")
  stateNumber         String  @default("")                  @map("state_number")
  carType             String  @default("")                  @map("car_type")
  carBrand            String  @default("")                  @map("car_brand")
  carModel            String  @default("")                  @map("car_model")
  manufactureYear     String  @default("")                  @map("manufacture_year")
  bodyType            String  @default("")                  @map("body_type")
  generation          String  @default("")
  enginesType         String  @default("")                  @map("engines_type")
  enginesModification String  @default("")                  @map("engines_modification")
  enginesNumber       String  @default("")                  @map("engines_number")
  driveUnit           String  @default("")                  @map("drive_unit")
  gearboxType         String  @default("")                  @map("gearbox_type")
  modification        String  @default("")                  @map("modification")
  engineCapacity      String  @default("")                  @map("engine_capacity")
  power               String  @default("")                  @map("power")
  color               String  @default("")
  metallic            Boolean @default(false)
  mileage             String  @default("")
  notInstalled        Boolean @default(false) @map("not_installed")
  newCar              Boolean @default(false) @map("new_car")
  emergency           Boolean @default(false)
  notOnTrack          Boolean @default(false) @map("not_on_track")
  totalComment        String  @default("")    @map("total_comment")

  @@map("vehicles_datas")
}

model AdditionalDocuments {
  additionalDocumentsId Int    @id @default(autoincrement()) @map("additional_documents_id")
  comment               String @default("")

  @@map("additional_documents")
}
// Добавить "Видео" "Фото" "Файл"

model TCP {
  tcpId           Int    @id @default(autoincrement()) @map("tcp_id")
  availabilityTCP String @default("")                  @map("availability_tcp")
  chassis         String @default("")
  series          String @default("")
  number          String @default("")
  dateOfIssue     String @default("")                  @map("date_of_issue")
  numberOfOwners  String @default("")                  @map("number_of_owners")

  @@map("tcp")
}
// Добавить "Видео" "Фото" "Файл"

model STS {
  stsId       Int     @id @default(autoincrement()) @map("sts_id")
  absent      Boolean @default(false)
  series      String  @default("")
  number      String  @default("")
  dateOfIssue String  @default("")                  @map("date_of_issue")
  issuedBy    String  @default("")                  @map("issued_by")

  @@map("sts")
}
// Добавить "Видео" "Фото" "Файл"

model Location {
  locationId Int     @id @default(autoincrement()) @map("location_id")
  country    String  @default("")
  region     String  @default("")
  city       String  @default("")
  address    String  @default("")
  comment    String  @default("")

  @@map("locations")
}
