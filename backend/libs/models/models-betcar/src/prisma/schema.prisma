  remoteEngineStart          Boolean @default(false)               @map("remote_engine_start")
  engineStartButton          Boolean @default(false)               @map("engine_start_button")
  onBoardComputer            Boolean @default(false)               @map("on_board_computer")
  camera                     String  @default("")
  airConditioner             String  @default("")                  @map("air_conditioner")
  cruiseControl              String  @default("")                  @map("cruise_control")
