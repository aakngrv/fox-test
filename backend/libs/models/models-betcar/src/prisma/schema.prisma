// ** Модели сервиса "Комплектация" ** //

model ComplectationReview {
  complectationReviewId          Int     @id @default(autoincrement()) @map("complectation_review_id")
  complectationtName             String  @default("")                  @map("equipment_name")
  highBeamControlSystem          Boolean @default(false)               @map("high_beam_control_system")
  adaptiveLightingSystem         Boolean @default(false)               @map("adaptive_lighting_system")
  automaticHeadlightRangeControl Boolean @default(false)               @map("automatic_headlight_range_control")
  fogLights                      Boolean @default(false)               @map("fog_lights")
  headlightWasher                Boolean @default(false)               @map("headlight_washer")
  lights                         String  @default("")
  rainSensor                     Boolean @default(false)               @map("rain_sensor")
  lightSensor                    Boolean @default(false)               @map("light_sensor")
  electricalHeating              String  @default("")                  @map("electrical_heating")
  comment                        String  @default("")

  @@map("complectation-reviews")
}

model ComplectationBody {
  complectationBodyId Int     @id @default(autoincrement()) @map("complectation_body_id")
  roofRails           Boolean @default(false)               @map("roof_rails")
  bodyStickers        Boolean @default(false)               @map("body_stickers") 
  airbrushing         Boolean @default(false)
  bodyKit             Boolean @default(false)               @map("body_kit")
  discType            String  @default("")                  @map("disc_type")


  @@map("complectation-bodies")
}

model ComplectationProtection {
  complectationProtectionId Int     @id @default(autoincrement()) @map("complectation_protection_id")
  interiorIntrusionSensor   Boolean @default(false)               @map("interior_intrusion_sensor")
  centralLocking            Boolean @default(false)               @map("central_locking")
  immobilizer               Boolean @default(false)   
  signaling                 String  @default("")

  @@map("complectation_protections")
}

model ComplectationMultimedia {
  compectationMultimediaId          Int     @id @default(autoincrement()) @map("complectation_multimedia_id")
  bluetooth                         Boolean @default(false)
  cd                                Boolean @default(false)
  usb                               Boolean @default(false)
  aux                               Boolean @default(false)
  dvd                               Boolean @default(false)
  tv                                Boolean @default(false)
  subwoofer                         Boolean @default(false)
  audioSystem                       String  @default("")                  @map("audio_system")
  multimediaSystemForRearPassengers Boolean @default(false)               @map("multimedia_system_for_rear_passengers")
  voiceControl                      Boolean @default(false)               @map("voice_control")
  navigationSystem                  Boolean @default(false)               @map("navigation_system")
  socket220V                        Boolean @default(false)               @map("socket_220_v")
  socket12V                         Boolean @default(false)               @map("socket_12_v")

  @@map("complectation_multimedias")
}

model ComplectationSalon {
  complectationSalonId         Int     @id @default(autoincrement()) @map("complectation_salon_id")
  interiorMaterial             String  @default("")                  @map("interior_material")
  interiorColor                String  @default("")                  @map("interior_color")
  steeringWheelLeatherTrim     Boolean @default(false)               @map("steering_wheel_leather_trim")
  leatherTrimmedGearshiftLever Boolean @default(false)               @map("leather_trimmed_gearshift_lever")
  numberOfSeats                String  @default("")                  @map("number_of_seats")
  heatedSeats                  String  @default("")                  @map("heated_seats")
  seatHeighAdjustment          String  @default("")                  @map("seat_height_adjustment")
  powerSeats                   String  @default("")                  @map("power_seats")
  seatPositionMemory           String  @default("")                  @map("seat_position_memory")
  seatVentilation              String  @default("")                  @map("seat_ventilation")
  frontCenterArmrest           Boolean @default(false)               @map("front_center_armrest")
  panoramicView                Boolean @default(false)               @map("panoramic_view")
  foldingRearSeat              Boolean @default(false)               @map("folding_rear_seat")
  sportsFrontSeats             Boolean @default(false)               @map("sports_front_seats")
  steeringWheelHeating         Boolean @default(false)               @map("steering_wheel_heating")
  tintedGlass                  Boolean @default(false)               @map("tinted_glass")
  thirdRowOfSeats              Boolean @default(false)               @map("third_row_of_seats")
  luke                         Boolean @default(false)
 
  @@map("complectation_salons")
}
