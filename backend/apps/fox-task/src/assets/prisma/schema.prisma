generator client {
  provider = "prisma-client-js"
  output   = "../../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId       Int      @id @default(autoincrement()) @map("user_id")
  name         String   @default("")
  email        String   @unique @default("")
  passwordHash String   @default("")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("users")
}

model RefreshToken {
  refreshTokenId Int      @id @default(autoincrement()) @map("refresh_token_id")
  userId         Int      @map("user_id")
  tokenId        Int      @map("token_id")
  createdAt      DateTime @default(now()) @map("created_at")
  expiresIn      DateTime @default(now()) @map("expires_in")

  @@map("refresh_tokens")
}

model Task {
  taskId      Int      @id @default(autoincrement()) @map("task_id")
  author      String   @default("")
  executor    String   @default("")
  title       String   @default("")
  description String   @default("")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("tasks")
}
